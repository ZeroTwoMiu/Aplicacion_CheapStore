<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".ui.producto.ProductoEditar">

    <!-- Código -->
    <EditText
        android:id="@+id/etCodProductoE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Código"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:textColor="#000"
        android:textColorHint="#888"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nombre -->
    <EditText
        android:id="@+id/etNomProductoE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:textColor="#000"
        android:textColorHint="#888"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/etCodProductoE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Descripción -->
    <EditText
        android:id="@+id/etDesProductoE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Descripción"
        android:inputType="text"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:textColor="#000"
        android:textColorHint="#888"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/etNomProductoE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Categoría -->
    <Spinner
        android:id="@+id/spCatProductoE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/etDesProductoE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Marca -->
    <Spinner
        android:id="@+id/spMarProductoE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/spCatProductoE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Precio Compra -->
    <EditText
        android:id="@+id/etPcoProductoE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Precio de Compra"
        android:inputType="numberDecimal"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:textColor="#000"
        android:textColorHint="#888"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/spMarProductoE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Precio Venta -->
    <EditText
        android:id="@+id/etPveProductoE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Precio de Venta"
        android:inputType="numberDecimal"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:textColor="#000"
        android:textColorHint="#888"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/etPcoProductoE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón Editar -->
    <Button
        android:id="@+id/btnRegProductoE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#FF9800"
        android:padding="14dp"
        android:elevation="4dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/etPveProductoE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
