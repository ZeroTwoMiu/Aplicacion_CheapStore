<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo o Icono -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo de la aplicación"
            android:layout_marginBottom="16dp" />

        <!-- Título -->
        <TextView
            android:id="@+id/tvAboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheapStore"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="8dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvAboutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Somos tu mejor opción para adquirir hardware y software de cómputo con la mejor calidad y soporte técnico."
            android:textSize="16sp"
            android:textColor="#34495E"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Datos de contacto -->
        <TextView
            android:id="@+id/tvAboutContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacto:\ncheapstore@cheap.com\nwww.facebook.com/CheapStorPe/"
            android:textSize="14sp"
            android:textColor="#7F8C8D"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Versión -->
        <TextView
            android:id="@+id/tvAboutVersion"
            android:layout_width="298dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="Version Beta 0.98"
            android:textColor="#95A5A6"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAboutEncuentranos"
            android:layout_width="213dp"
            android:layout_height="31dp"
            android:gravity="center"
            android:rotation="0"
            android:text="Encuéntranos en"
            android:textColor="#34495E"
            android:textSize="16sp" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
