<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Nombre -->
    <TextView
        android:id="@+id/tvNombreCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Apellido Paterno -->
    <TextView
        android:id="@+id/tvApellidoPaternoCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apellido Paterno"
        app:layout_constraintTop_toBottomOf="@id/tvNombreCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Apellido Materno -->
    <TextView
        android:id="@+id/tvApellidoMaternoCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apellido Materno"
        app:layout_constraintTop_toBottomOf="@id/tvApellidoPaternoCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- N° Documento -->
    <TextView
        android:id="@+id/tvDniCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="N° Documento"
        app:layout_constraintTop_toBottomOf="@id/tvApellidoMaternoCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Celular -->
    <TextView
        android:id="@+id/tvCelularCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Celular"
        app:layout_constraintTop_toBottomOf="@id/tvDniCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Correo -->
    <TextView
        android:id="@+id/tvEmailCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Correo"
        app:layout_constraintTop_toBottomOf="@id/tvCelularCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dirección -->
    <TextView
        android:id="@+id/tvDireccionCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dirección"
        app:layout_constraintTop_toBottomOf="@id/tvEmailCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fecha de Nacimiento -->
    <TextView
        android:id="@+id/tvFechaNacCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha de nacimiento"
        app:layout_constraintTop_toBottomOf="@id/tvDireccionCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Estado -->
    <TextView
        android:id="@+id/tvEstadoCliente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estado"
        app:layout_constraintTop_toBottomOf="@id/tvFechaNacCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ID (invisible) -->
    <TextView
        android:id="@+id/tvIdCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/tvEstadoCliente"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botón Editar -->
    <Button
        android:id="@+id/btnEditarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        app:icon="@android:drawable/ic_menu_edit"
        app:layout_constraintTop_toBottomOf="@id/tvIdCliente"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botón Eliminar -->
    <Button
        android:id="@+id/btnEliminarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:backgroundTint="#FF0000"
        android:textColor="@android:color/white"
        app:icon="@android:drawable/ic_delete"
        app:layout_constraintTop_toBottomOf="@id/tvIdCliente"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
