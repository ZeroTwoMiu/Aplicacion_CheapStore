<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TiendaApp2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowSplashScreenBackground">@color/icono_logo_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/icono_logo_round</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@null</item>
    </style>
</resources>